                        <ImageView fitHeight="34.0" fitWidth="33.0" preserveRatio="true">
                            <image>
                                <Image url="@../images/btnDelete.jpg" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
            </children>
        </HBox>
    </children>
